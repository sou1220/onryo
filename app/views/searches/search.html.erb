<% if @model == "User" %>
  <h3>Users search for "<%= @word %>"</h3>
  <table class = "table">
    <thead>
     <tr>
       <th>
       </th>
       <th scope = "col">
         名前
       </th>
       <th scope= "col">
         施設名
       </th>
       <th scope = "col">
         コメント
       </th>
     </tr>
    </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <% if user.posts.any? %>
          <%= image_tag user.posts.first.image %><br>
        <% end %>
      </td>
      <td>
        <%= user.name %>
      </td>
        <% user.posts.each do |post| %>
          <td>
            <%= post.title %>
          </td>
          <td>
            <%= post.body %>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% elsif @model == "Post" %>
  <h3>Posts search for "<%= @word %>"</h3>
    <table class = "table">
      <thead>
       <tr>
         <th>
         </th>
         <th scope = "col">
           名前
         </th>
         <th scope= "col">
           施設名
         </th>
         <th scope = "col">
           コメント
         </th>
       </tr>
      </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= image_tag post.get_image %></br>
          </td>
          <td>
            <%= post.user.name %>
          </td>
          <td>
            <%= post.title %>
          </td>
          <td>
            <%= post.body %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
  