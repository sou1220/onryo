<div class="container">
  <div class="row">
    <div class="col-sm px-3">
      <h1>投稿一覧</h1>
      <% @posts.each do |post| %>
        <div class="card" style="width: 50%;">
          <%= image_tag post.get_image, class: "card-img-top" %>
            <div class="card-body">
              <h5 class = "card-title">施設名:<%= post.title %></h5>
              <p  class = "card-text" >コメント:<%= post.body %></p>
            <%= link_to '詳細', post_path(post.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>