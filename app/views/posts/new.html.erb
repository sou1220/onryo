<div class="container">
  <div class="row">
    <div class="col">
      <% flash[:notice] %>
      <h1>投稿フォーム</h1>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @post do |f| %>
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <h4>施設名</h4>
        <%= f.text_field :title %>
        <h4>コメント</h4>
        <%= f.text_area :body %>
        <%= f.submit '投稿' , class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>