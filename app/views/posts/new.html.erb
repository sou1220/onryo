<div class="container">
  <div class="row">
    <div class="col-sm px-5">
      <% flash[:notice] %>
      <h1 class = "pt-5">投稿フォーム</h1>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @post do |f| %>
        <h2 class = "pt-3 pb-1">画像</h2>
        <%= f.file_field :image, accept: "image/*" %>
        <h2 class = "pt-3">施設名</h2>
        <%= f.text_field :title, placeholder: "温泉名、旅館名等" %>
        <h2 class = "pt-3">コメント</h2>
        <%= f.text_area :body, placeholder: "感想等" %></br>
        
        <!--タグ-->
        <div class = "form-group pt-3">
          <label class = "h2">タグ</label></br>
          <%= f.text_field :tag, placeholder: "温泉、旅館等"  %>
        </div>
        
        <!--レビュー-->
         <div id="post_raty"></div>
        <script>
          (function() {
            $('#post_raty').empty();
            let elem = document.querySelector('#post_raty');
            let opt = {  
              size: 36,
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              half: false, 
              scoreName: 'post[star]',
            };
            raty(elem, opt);
          })(); 
        </script>
        <%= f.submit '投稿' , class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>