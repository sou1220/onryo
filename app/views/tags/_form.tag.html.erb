<%= form_with url: tag_search_path, method: :get, local: true do |f| %>
  <% tag = Post.select(:tag).distinct %>
  <!--プルダウンメニューで選択-->
  <div>
    <%= f.collection_select(:word, tag, :tag, :tag, include_blank: "タグを選択") %>
  </div>

  <!-- 入力で検索 -->
  <div>
    <%= f.text_field :search_word, placeholder: "タグを入力" %>
  </div>

  <%= f.submit "タグを検索", class: "btn btn-primary" %>
<% end %>

  