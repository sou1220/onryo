  <h3>Posts search for "<%= @word %>"</h3>
    <table class = "table">
      <thead>
       <tr>
         <th>
         </th>
         <th scope = "col">
           名前
         </th>
         <th scope= "col">
           施設名
         </th>
         <th scope = "col">
           タグ
         </th>
       </tr>
      </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= image_tag post.get_image %></br>
          </td>
          <td>
            <%= post.user.name %>
          </td>
          <td>
            <%= post.title %>
          </td>
          <td>
          　<%= link_to post.tag, tag_search_path(word: post.tag) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>