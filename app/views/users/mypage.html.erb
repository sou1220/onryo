<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @user.name %>さんのマイページ</h1>
      <% @posts.each do |post| %>
        <% if post.user_id == current_user.id %>
          <div class = "pt-3"><%= image_tag post.get_image %></div></br>
          <p><span class = "h5">施設名:</span><%= post.title %></p>
          <p><span class = "h5">コメント:</span><%= post.body %></p>
          <p>投稿日:<%= post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
            <% unless @user.guest_user? %>
            <%= link_to 'ユーザー編集', edit_user_path(current_user.id) %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>